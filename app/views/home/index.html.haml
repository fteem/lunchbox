%section{"ng-controller" => "LunchesController"}
  %ul
    %li{"ng-repeat" => 'lunch in lunches'}
      {{ lunch }}


  %form{"ng-submit" => "saveLunch()", "novalidate" => "true"}
    Name
    %input{"type" => "text", "ng-model" => "lunch.name"}
    Description
    %input{"type" => "text", "ng-model" => "lunch.description"}
    Starts On
    %input{"type" => "text", "ng-model" => "lunch.startsOn"}
    Ends On
    %input{"type" => "text", "ng-model" => "lunch.endsOn"}
    %input{"type" => "submit"}